import re
f = open("Vendetta.txt", 'r')
f = f.read()
print(f)
v = f.translate({ord(i): None for i in '?.'',(0):;!"'})
print(v)
check = re.findall(r'Nic', v)
print(check)
count =[]
count.append(v.count('Nic'))
print('The count of Rose is:', count)
neg = []
pos = []
if len(count) >= 1:
    print('yay')
    pos.extend(count)
else:
    print('hello')
    neg.extend(count)
print('positive', (pos))
print('neg', (neg))
